{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Air Quality in Malaysia (2023)",
  "projection": {"type": "mercator"},

  "params": [
    {
      "name": "AQI_selection",
      "value": "All",
      "bind": {
        "input": "select",
        "options": [
          "All",
          "Good",
          "Moderate",
          "Unhealthy for Sensitive Groups",
          "Unhealthy",
          "Very Unhealthy"
        ],
        "labels": [
          "All",
          "Good",
          "Moderate",
          "Unhealthy (Sensitive Groups)",
          "Unhealthy",
          "Very Unhealthy"
        ],
        "name": "Filter by AQI Category: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "ne_110m_my.json",
        "format": {"type": "topojson", "feature": "ne_110m_ocean"}
      },
      "mark": {"type": "geoshape", "fill": "lightblue", "stroke": "white"}
    },
    {
      "data": {
        "url": "ne_110m_my.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "#f0e6cc", "stroke": "gray"}
    },
    {
      "data": {"url": "malaysia_aqi.csv"},
      "transform": [
        {
          "filter": "AQI_selection == 'All' || datum['AQI Category'] == AQI_selection"
        }
      ],
      "mark": {"type": "circle", "stroke": "white", "fillOpacity": 0.8},
      "encoding": {
        "longitude": {"field": "lng", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "size": {
          "field": "AQI Level",
          "type": "quantitative",
          "scale": {"range": [50, 800]},
          "title": "AQI Level"
        },
        "color": {
          "field": "AQI Category",
          "type": "ordinal",
          "legend": {"title": "Air Quality Index Category"},
          "scale": {
            "domain": [
              "Good",
              "Moderate",
              "Unhealthy for Sensitive Groups",
              "Unhealthy",
              "Very Unhealthy",
              "Hazardous"
            ],
            "range": ["#c7e9b4", "#fdae61", "#f46d43", "#d73027", "#a50026", "#67000d"]
          }
        },
        "tooltip": [
          {"field": "City", "type": "nominal"},
          {"field": "AQI Category", "type": "nominal"},
          {"field": "AQI Level", "type": "quantitative"},
          {"field": "PM2\\.5 AQI Content (microgram per cubic meter)", "type": "quantitative"},
          {"field": "CO AQI Content (microgram per cubic meter)", "type": "quantitative"}
        ]
      }
    },
    {
      "data": {"url": "malaysia_aqi.csv"},
      "transform": [
        {
          "filter": "AQI_selection == 'All' || datum['AQI Category'] == AQI_selection"
        }
      ],
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 10,
        "dy": -5,
        "fontSize": 11,
        "fontWeight": "bold",
        "stroke": "black",
        "strokeWidth": 0
      },
      "encoding": {
        "longitude": {"field": "lng", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "text": {"field": "City", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['City'] == 'Kuala Terengganu' || datum['City'] == 'Kuching' || datum['City'] == 'Miri' || datum['City'] == 'Pasir Gudang'|| datum['City'] == 'Seremban' || datum['City'] == 'Sungai Petani' || datum['City'] == 'Lahad Datu'",
            "value": 1
          },
          "value": 0
        }
      }
    },
    {
      "data": {
        "url": "ne_110m_my.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_1"}
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "black",
        "strokeWidth": 0.4,
        "opacity": 0.6
      }
    }
  ],
  "config": {
    "style": {
      "tooltip": {
        "font": "Arial",
        "fontSize": 13,
        "fontWeight": "normal"
      }
    }
  }
}
